<div class="row">
  <div class="small-12 columns"><h2>Location: <%= @restroom.location_name %></h2>
    <h4 class="subheader"><%= link_to 'Add Review', "/restrooms/#{@restroom.id}/reviews/new" %></h4>
  </div>
  <div class="small-12 columns">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Posted By</th>
          <th>Date</th>
          <th>Cleanliness</th>
          <th>Privacy</th>
          <th>Smell</th>
          <th>Accessibility</th>
          <th>Gender</th>
          <th>Baby Station</th>
        </tr>
      </thead>
      <tbody>
        <% @restroom.reviews.reverse.each do |x| %>
          <tr>
            <td><%= x.user.first_name %> <%= x.user.last_name %></td>
            <td><%= x.created_at.strftime("%b %d, %Y") %></td>
            <td>
              <% if x.cleanliness.nil? %>
                <%= "N/A" %>
              <% else %>
                <%= x.cleanliness %>
              <% end %>
            </td>
            <td>
              <% if x.privacy.nil? %>
                <%= "N/A" %>
              <% else %>
                <%= x.privacy %>
              <% end %>
            </td>
            <td>
              <% if x.smell.nil? %>
                <%= "N/A" %>
              <% else %>
                <%= x.smell %>
              <% end %>
            </td>
            <td><%= x.accessibility %></td>
            <td><%= x.gender %></td>
            <td><%= x.baby_station %></td>
          </tr>
          <tr>
            <td colspan="8"><strong>Comments:</strong> <%= x.comments %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<p></p>
