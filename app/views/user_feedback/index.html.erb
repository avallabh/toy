<div class="row">
  <div class="small-3 columns"></div>
  <div class="small-6 small-centered columns">
    <h3>Contact Me</h3>
  </div>
  <div class="small-3 columns"></div>
</div>

<div class="row">
  <div class="small-3 columns"></div>
  <div class="small-6 small-centered columns"><div>
    <%= simple_form_for @user_feedback do |f| %>
    <%= f.input :first_name, label: 'First Name', required: true %>
    <%= f.input :last_name, label: 'Last Name', required: true %>
    <%= f.input :email, required: true %>
    <%= f.input :subject, required: true %>
    <%= f.input :body, as: :text, required: true %>
    <%= f.button :submit, 'Send Message', class: 'button' %>
    <% end %>
  </div>
</div>
<div class="small-3 columns"></div>
</div>
