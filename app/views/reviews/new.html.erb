<h3>Add Review (1 - worst; 5 - best)</h3>

<div class="large-4 columns">

<%= simple_form_for @review, url: url_for(action: 'create', controller: 'reviews', method: 'post') do |f| %>
<%= f.input :cleanliness, :collection => 1..5 %>
<%= f.input :privacy, :collection => 1..5 %>
<%= f.input :smell, :collection => 1..5 %>
<%= f.input :accessibility, :collection => ['Unknown', 'Public', 'Purchase Required', 'Private'], selected: 'Unknown' %>
<%= f.input :gender, :collection => ['Unisex', 'Male', 'Female', 'Both'], selected: 'Both' %>
<%= f.input :baby_station, :collection => ['Unknown', 'Yes', 'No'], selected: 'Unknown'  %>
<%= f.input :comments, label: 'Comments (500 character limit)', as: :text, input_html: { maxlength: 500 } %>
<%= f.hidden_field :user_id, value: current_user.id, readonly: true %>
<%= f.button :submit, 'Add Review', class: 'button' %>
<% end %>

<%= link_to 'Feedback? Contact Me', user_feedbacks_path %>
</div>
